<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Media Buy & Sell - Listings</title>
    <%- include('partials/_head') %>
    <script type="text/javascript" src="/scripts/validate.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script> -->
  </head>

  <body id="new-listing-page">
    <%- include('partials/_header') %>
    <div class="new-listing-form">
      <h2>Create New Listing</h3>
        <form method="POST" action="/listings" name="myForm" onsubmit="return(validate())">
          <!-- <form method="POST" action="/listings"> -->
          <ul id='tabs'>
            <li><a class="tabs1">Listing Information</a></li>
            <li><a class="tabs2 inactive">Album Information</a></li>
          </ul>
          <div class="container">
            <div class="tab1">
              <label>Title of Listing:</label><br>
              <textarea class="textbox" name="listingtitle" placeholder="Title of Listing"></textarea><br>
              <label>Image:</label> <span class='file file--upload'>
                <label for='input-file'><a><i class="fas fa-upload"></i></a></label>
                <input id='input-file' type='file' /></span><br>
              <textarea name="image" placeholder="Image URL"></textarea>
              <br>
              <label>Price:</label><br>
              <textarea name="price" placeholder="Price"></textarea><br>
              <label>Description:</label><br>
              <textarea name="description" placeholder="Description"></textarea><br>
            </div>
            <div class="tab2 inactive">
              <label>Album Name:</label><br>
              <textarea name="albumname" placeholder="Album Name"></textarea><br>
              <label>Artist:</label><br>
              <textarea name="artistname" placeholder="Artist Name"></textarea><br>
              <label>Genre:</label><br>
              <textarea name="genre" placeholder="Genre"></textarea><br>
              <label>Publisher:</label><br>
              <textarea name="publisher" placeholder="Publisher"></textarea><br>
              <label>Year Released:</label><br>
              <textarea name="year" placeholder="Year Released"></textarea><br>
            </div>
            <p>Do you want this listing to be featured?</p>
            <input type="radio" id="featuredY" name="featured" value="true">
            <label for="featuredY">Yes</label>
            <input type="radio" id="featuredN" name="featured" value="false">
            <label for="featuredN">No</label><br>
          </div>
          <button type="submit">
            <i class="far fa-plus-square"></i>
            Create New Listing
          </button>
        </form>
    </div>
    <%- include('partials/_footer') %>
  </body>

</html>
