<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Media Buy & Sell - Listings</title>
    <%- include('partials/_head') %>
  </head>

  <body>
    <%- include('partials/_header') %>
    <h1>Browse Listings</h1>
    <form class="price-filter" method="GET" action="/listings">
      <label> Price Range:</label>
      <textarea name="min" placeholder="Minimum Price"></textarea>
      <textarea name="max" placeholder="Maximum Price"></textarea>
      <button type="submit">Filter</button>
    </form>
    <section>
      <div>
        <% for (let listing in listings) { %>
        <div class="listing-container">
          <section>
            <div class='img-container'>
              <img src="<%=listings[listing]['image_url'] %>" /></div>
            <h3><%- listings[listing]['title'] %></h3>
            <p>$<%- listings[listing]['price'] %>.00</p>
          </section>
          <p>
            <!-- Stephanie trying to help make description more obvious -->
            <%- listings[listing]['description']%>
          </p>
          <div class="action-buttons">
            <form method="GET" action="/listings/<%- listings[listing]['id']%>">
              <button type="submit">
                <i class="far fa-eye"></i>
                View More
              </button>
            </form>
            <form method="GET" action="/messages/">
              <button type="submit">
                <i class="fas fa-comments"></i>
                Message Seller
              </button>
            </form>
            <form method="POST" action="/favorites/<%- listings[listing]['id']%>">
              <button id="faveButton" type="submit">
                <i class="far fa-heart"></i>
                Add to Favourites
              </button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </section>
  </body>

</html>
