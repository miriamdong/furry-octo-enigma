<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Media Buy & Sell - Listings</title>
    <%- include('partials/_head') %>
  </head>

  <body>
    <%- include('partials/_header') %>
    <h1>Browse Listings</h1>
    <form method="POST" action="/#">
      <label> Price Range:</label>
      <textarea name="text" placeholder="Minimum Price"></textarea>
      <textarea name="text" placeholder="Maximum Price"></textarea>
      <button type="submit">Filter</button>
    </form>
    <div>
      <h3>Create New Listing</h3>
      <form method="POST" action="/listing/:listingid">
        <label>Album Name:</label><br>
        <textarea name="text" placeholder="Album Name"></textarea><br>
        <label>Artist:</label><br>
        <textarea name="text" placeholder="Artist"></textarea><br>
        <label>Genre:</label><br>
        <textarea name="text" placeholder="Genre"></textarea><br>
        <label>Publisher:</label><br>
        <textarea name="text" placeholder="Publisher"></textarea><br>
        <label>Year Released:</label><br>
        <textarea name="text" placeholder="Year Released"></textarea><br>
        <label>Description:</label><br>
        <textarea name="text" placeholder="Year Released"></textarea><br>
        <label>Price:</label><br>
        <textarea name="text" placeholder="Price"></textarea><br>
        <label>Image:</label><br>
        <textarea name="text" placeholder="Image URL"></textarea><br>
        <input type="submit" value="Submit">
      </form>
    </div>
    <section class="listings">
    </section>
  </body>
</html>
