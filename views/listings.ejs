<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Media Buy & Sell - Listings</title>
    <%- include('partials/_head') %>
  </head>

  <body>
    <%- include('partials/_header') %>
    <h1>Browse Listings</h1>
    <form class="price-filter" method="POST" action="/#">
      <label> Price Range:</label>
      <textarea name="text" placeholder="Minimum Price"></textarea>
      <textarea name="text" placeholder="Maximum Price"></textarea>
      <button type="submit">Filter</button>
    </form>
    <div class="new-listing-form">
      <!-- Only toggle the form once the create listing button is clicked? -->
      <h3>Create New Listing</h3>
      <form method="POST" action="/listings">
        <label>Title of Listing:</label><br>
        <textarea name="listingtitle" placeholder="Title of Listing"></textarea><br>
        <label>Image:</label><br>
        <textarea name="image" placeholder="Image URL"></textarea><br>
        <label>Price:</label><br>
        <textarea name="price" placeholder="Price"></textarea><br>
        <label>Description:</label><br>
        <textarea name="description" placeholder="Description"></textarea><br>

        <p> Item Details:</p>
        <label>Album Name:</label><br>
        <textarea name="albumname" placeholder="Album Name"></textarea><br>
        <label>Artist:</label><br>
        <textarea name="artistname" placeholder="Artist Name"></textarea><br>
        <label>Genre:</label><br>
        <textarea name="genre" placeholder="Genre"></textarea><br>
        <label>Publisher:</label><br>
        <textarea name="publisher" placeholder="Publisher"></textarea><br>
        <label>Year Released:</label><br>
        <textarea name="year" placeholder="Year Released"></textarea><br>

        <p>Do you want this listing to be featured?</p>
        <input type="radio" id="featuredY" name="featured" value="true">
        <label for="featuredY">Yes</label>
        <input type="radio" id="featuredN" name="featured" value="false">
        <label for="featuredN">No</label><br>

        <input type="submit" value="Submit">
      </form>
    </div>
    <section>
      <div>
        <% for (let listing in listings) { %>
          <div class="listing-container">
          <section>
            <img src="<%=listings[listing]['image_url'] %>" />
            <h4><%- listings[listing]['title'] %></h4>
            <p>$<%- listings[listing]['price'] %>.00</p>
          </section>
         <div class="action-buttons">
            <form method="GET" action="/listings/<%- listings[listing]['id']%>">
              <button type="submit">
                <i class="far fa-eye"></i>
                View More
              </button>
            </form>
            <form method="GET" action="/messages/<%- listings[listing]['seller_id']%>">
              <button type="submit">
                <i class="fas fa-comments"></i>
                Message Seller
              </button>
            </form>
            <form method="POST" action="/favorites/<%- listings[listing]['id']%>">
              <button type="submit">
                <i class="far fa-heart"></i>
                Add to Favourites
              </button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </section>
  </body>
</html>
